<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Resume Form</title>
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <div class="container">
      <a href="/" class="back-button">‚Üê Back to Home</a>

      <% if(locals.message){ %>
      <div class="message <%= locals.messageType ? locals.messageType : '' %>">
        <%= locals.message %>
      </div>
      <% } %>

      <h1>Resume Form</h1>
      <form action="/submit" method="post">
        <!-- personal Info -->
        <div class="section info">
          <h2>Personal Information</h2>
          <label for="name">Name</label>
          <input type="text" name="name" class="name" id="name" required />

          <div class="expBox">
            <div class="expInfo">
              <label for="expert">Expertise</label>
              <input type="text" name="expert[]" class="expert" id="expert" />
              <button name="addExpertise" type="button">Add Expertise</button>
            </div>
          </div>
        </div>

        <!-- contact -->
        <div class="section contact">
          <h2>Contact Information</h2>
          <label for="phone">Phone Number</label>
          <input type="text" name="phone" id="phone" />

          <label for="email">Email</label>
          <input type="email" name="email" id="email" required />

          <label for="website">Website</label>
          <input type="text" name="website" id="website" />

          <label for="linkedin">LinkedIn</label>
          <input type="text" name="linkedin" id="linkedin" />

          <label for="address">Address</label>
          <input type="text" name="address" id="address" />
        </div>

        <!-- education -->
        <div class="section educationBox">
          <h2>Education</h2>
          <div class="eduinfo">
            <label for="degree">Degree</label>
            <input type="text" name="degree[]" id="degree" />

            <label for="start">Start Year</label>
            <input type="text" name="start[]" id="start" />

            <label for="end">End Year</label>
            <input type="text" name="end[]" id="end" />

            <label for="uni">University Name</label>
            <input type="text" name="uni[]" id="uni" />

            <button name="addEdu" type="button">Add Education</button>
          </div>
        </div>

        <!-- language -->
        <div class="section language">
          <h2>Languages</h2>
          <label for="lanname">Language</label>
          <input type="text" name="lanname[]" id="lanname" />

          <label for="lanper">Expertise Percentage</label>
          <input type="text" name="lanper[]" id="lanper" />

          <button name="addlng" type="button">Add Language</button>
        </div>

        <!-- brief -->
        <div class="section briefintro">
          <h2>About Me</h2>
          <label for="briefintro"
            >Provide brief information about yourself</label
          >
          <textarea name="briefintro" id="briefintro"></textarea>
        </div>

        <!-- experience -->
        <div class="section experienceBox">
          <h2>Work Experience</h2>
          <div class="experience">
            <label for="ex-start">Start Year</label>
            <input type="text" name="ex-start[]" id="ex-start" />

            <label for="ex-end">End Year</label>
            <input type="text" name="ex-end[]" id="ex-end" />

            <label for="cname">Company Name</label>
            <input type="text" name="cname[]" id="cname" />

            <label for="job-role">Job Role</label>
            <input type="text" name="job-role[]" id="job-role" />

            <label for="job-des">Job Description</label>
            <textarea name="job-des[]" id="job-des"></textarea>

            <button type="button" name="addExperience">Add Experience</button>
          </div>
        </div>

        <!-- skills -->
        <div class="section skillBox">
          <h2>Skills</h2>
          <div class="skills">
            <label for="skill-name">Skill Name</label>
            <input type="text" name="skill-name[]" id="skill-name" />

            <label for="skill-per">Expertise Percentage</label>
            <input type="text" name="skill-per[]" id="skill-per" />

            <button type="button" name="addSkill">Add Skill</button>
          </div>
        </div>
        <br />
        <br />
        <br />
        <!-- <button type="submit" value="submit">Submit</button> -->
      </form>
    </div>

    <script src="script.js"></script>
  </body>
</html>
