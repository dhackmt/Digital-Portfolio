<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Resume Form</title>
    <link rel="stylesheet" href="/css/formStyle.css" />
  </head>
  <body>
    <div>
      <% if(locals.message){ %>
      <div class="container mt-20">
        <div class="alert alert-danger" role="alert"><%=locals.message %></div>
      </div>
      <% } %>
    </div>
    <h1>Resume Form</h1>
    <span>
      <h1><a href="/user/dashboard"> Home </a></h1>
    </span>

    <!--here it was /submit-->
    <form action="http://localhost:3000/submit" method="post">
      <!-- personal Info -->
      <div class="info">
        <h2>Personal Information</h2>
        <label for="name">Name</label><br />
        <input
          type="text"
          name="name"
          class="name"
          id="name"
          required
        /><br /><br />
        <div class="expBox">
          <div class="expInfo">
            <label for="expert">Expertise</label><br />
            <input
              type="text"
              name="expert[]"
              class="expert"
              id="expert"
              required
            /><br /><br />

            <button name="addExpertise" type="button">Add Expertise</button>
          </div>
        </div>
      </div>
      <!-- contact -->

      <div class="contact">
        <h2>Contact Information</h2>
        <label for="phone">Enter phone number</label><br />
        <input type="text" name="phone" id="phone" required /><br /><br />
        <label for="email">Enter email</label><br />
        <input type="email" name="email" id="email" required /><br /><br />
        <label for="webiste">Enter webiste</label><br />
        <input type="text" name="website" id="webiste" /><br /><br />
        <label for="linkedin">Enter linkedin</label><br />
        <input type="text" name="linkedin" id="linkedin" /><br /><br />
        <label for="address">Enter address</label><br />
        <input type="text" name="address" id="address" required /><br /><br />
      </div>

      <!-- education -->
      <div class="educationBox">
        <div class="eduinfo">
          <h2>Education</h2>
          <label for="degree">Degree</label><br />
          <input type="text" name="degree[]" id="degree" required /><br /><br />
          <label for="start">Start year</label><br />
          <input type="text" name="start[]" id="start" required /><br /><br />
          <label for="end">End Year</label><br />
          <input type="text" name="end[]" id="end" required /><br /><br />
          <label for="uni">University name</label><br />
          <input type="text" name="uni[]" id="uni" required /><br /><br />
          <button name="addEdu" type="button">Add Education</button>
        </div>
      </div>

      <!-- language -->
      <div class="language">
        <label for="name">language</label>
        <input type="text" name="lanname[]" required /><br />
        Enter percentage of Expertise
        <input type="text" name="lanper[]" required /><br /><br />
        <button name="addlng" type="button">Add language</button>
      </div>

      <!-- brief -->
      <div class="briefintro">
        <label for="intro">Provide brief Information about yourself</label>
        <textarea name="briefintro" id="briefintro" required></textarea
        ><br /><br />
      </div>

      <!-- experience -->
      <div class="experienceBox">
        <div class="experience">
          <label for="experience">Experience</label>
          Enter start Year:
          <input type="text" name="ex-start[]" required />
          Enter end Year:
          <input type="text" name="ex-end[]" required />
          Enter company name:
          <input type="text" name="cname[]" required />
          Enter job-role:
          <input type="text" name="job-role[]" required />
          Enter job description
          <textarea name="job-des[]" required></textarea><br /><br />

          <button type="button" name="addExperience">Add Experience</button
          ><br /><br />
        </div>
      </div>

      <!-- skills -->
      <div class="skillBox">
        <div class="skills">
          Enter Skill name:
          <input type="text" name="skill-name[]" required />
          Enter percentage of Expertise
          <input type="text" name="skill-per[]" required />
          <button type="button" name="addSkill">Add Skill</button>
        </div>
      </div>
      <div></div>
      <button type="submit" value="submit">submit</button>
    </form>

    <script src="/js/formScript.js"></script>
  </body>
</html>
